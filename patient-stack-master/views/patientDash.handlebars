{{> patientnav}}

<div class="main ui stackable grid container" id="main-container">
    <div class="ui container sixteen wide column">
        <div class="ui raised teal segment">
            <div class="row">
                <h1 class="ui header">
                    <img src="{{patient.image}}" class="ui circular image"> Welcome {{patient.first_name}} {{patient.last_name}}
                    <a href="/">
                        <div id="logout" class="ui basic button">Log Out</div>
                    </a>
                </h1>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="five wide column">
            <div class="ui medium header">My Doctors</div>
            <div class="ui tiny aligned center cards">
                <div class="teal card">
                    <div class="content">
                        <img class="right floated mini ui image" src="../assets/images/person.png">
                        <div class="header">
                            Dr. Elliot Fu
                        </div>
                        <div class="meta">
                            Primary Physician Family Medicine
                        </div>
                    </div>
                </div>
                <div class="teal card">
                    <div class="content">
                        <img class="right floated mini ui image" src="../assets/images/person.png">
                        <div class="header">
                            Dr. Jenny Hess
                        </div>
                        <div class="meta">
                            Referral Sports Medicine/Physical Therapy
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="five wide column">
            <div class="ui piled segment">
                <h4 class="ui header">General Information</h4>
                <ul>
                    <li>Date of Birth: {{patient.dob}}</li>
                    <li>Gender: {{patient.gender}}</li>
                    <li>Address: 4{{patient.street_address}}</li>
                    <li>{{patient.city}},{{patient.state}},{{patient.zip}}</li>
                    <li>Phone: {{patient.telephone}}</li>
                    <li>Height:{{patient.height}}</li>
                    <li>Weight:{{patient.weight}}</li>
                    <li>Provider: {{patient.provider_name}}</li>
                    <li>Emergency Contact: {{patient.emergency_contact_name}}</li>
                    <li>Emergency Contact Number: {{patient.emergency_contact_number}}</li>
                </ul>
            </div>
        </div>
        <div class="six wide column">
            <table class="ui teal table" id="table">
                <thead>
                    <tr>
                        <th><i class="alarm icon"></i>Reminders</th>
                        <th id="hide">Status</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td>Flu Vaccine</td>
                        <td class="positive"><i class="icon checkmark"></td>
                </tr>
                <tr>
                    <td>Prescription Renewal for: Hydrochlorothiazide</td>
                    <td></td>
                </tr>
                <tr>
                    <td>Tetanus, Diphtheria, Pertussis (Td, Tdap) Vaccine</td>
                    <td class="positive"><i class="icon checkmark"></td>
                </tr>
            </tbody>
        </table>
    </div>

</div>

